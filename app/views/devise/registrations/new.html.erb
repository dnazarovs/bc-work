<h2 class="center-text">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user-form', novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: "name", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autocomplete: "last_name", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.text_field :age, autocomplete: "age", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Create account!", class: 'submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

